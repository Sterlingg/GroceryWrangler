<% if receipt %>
  <div class="col-md-4">
    <div class="receipt-container">

      <%= link_to receipt, :title => "Some link" do %>
	<span class="link-spanner"></span>
      <% end %>

      <div class="row">
	<% if receipt.store %>
	  <%= receipt.store.name %>
	<% end %>
      </div>

      <div class="row">
	<%= receipt.date_purchased %>
      </div>

      <div class="row">
	$<%= receipt.total %>
      </div>

    </div>
  </div>
<% else %>
  <div class="col-md-4"> </div>
<% end %>
