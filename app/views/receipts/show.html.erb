<%= provide(:title, 'Show Receipts') %>

<div class="row">
  <h1> Purchased at <%= @receipt.store.name %> </h1>
  <h2> <%= @receipt.date_purchased.to_formatted_s(:long_ordinal)%> </h2>
  <div class=".col-md-6">
    $<%= @receipt.total %>
  </div>
</div>

<table class="table">
  <tr>
    <th> Name </th>
    <th> Category </th>
    <th> Weight </th>
    <th> Volume </th>
    <th> Price </th>
  </tr>

  <% @receipt.items.each do |item|%>
  <tr>
    <td> <%= item.name %> </td>     
    <td> 
      <% if item.category %>
        <%= item.category.name  %> 
      <% end %>
    </td>
    <td> <%= item.weight %> </td>
    <td> <%= item.volume %> </td>
    <td> <%= item.price %> </td>
  </tr>
  <% end %>
</table>

